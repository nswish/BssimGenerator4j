<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <filter>
        <filter-name>SparkFilter</filter-name>
        <filter-class>spark.servlet.SparkFilter</filter-class>
        <init-param>
            <param-name>applicationClass</param-name>
            <param-value>com.baosight.bssim.Application</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SparkFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Gen</servlet-name>
        <servlet-class>com.baosight.bssim.controllers.GenController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Gen</servlet-name>
        <url-pattern>/gen/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Config</servlet-name>
        <servlet-class>com.baosight.bssim.controllers.ConfigController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Config</servlet-name>
        <url-pattern>/config/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Doc</servlet-name>
        <servlet-class>com.baosight.bssim.controllers.DocController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Doc</servlet-name>
        <url-pattern>/doc/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            com.baosight.bssim.listeners.AppServletContextListener
        </listener-class>
    </listener>
</web-app>
